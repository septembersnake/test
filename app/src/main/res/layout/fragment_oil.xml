<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#80DEEA"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/liner_oil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/L1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/liner_oil">

        <Button
            android:id="@+id/button1_oil"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:backgroundTintMode="multiply"
            android:backgroundTint="@color/colortwo"
            android:textColor="@color/colorWhite"
            android:text="機油"
            android:textSize="18sp"/>

        <Button
            android:id="@+id/button2_oil"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:backgroundTintMode="multiply"
            android:backgroundTint="@color/colortwo"
            android:textColor="@color/colorWhite"
            android:text="齒輪油"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/L2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/L1"
        >

        <Button
            android:id="@+id/button3_oil"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:backgroundTintMode="multiply"
            android:backgroundTint="@color/colortwo"
            android:textColor="@color/colorWhite"
            android:text="汽油精"
            android:textSize="18sp" />

        <Button
            android:id="@+id/button4_oil"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:backgroundTintMode="multiply"
            android:backgroundTint="@color/colortwo"
            android:textColor="@color/colorWhite"
            android:text="機油精"
            android:textSize="18sp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/fragment_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_toEndOf="@+id/liner_oil"></RelativeLayout>

</RelativeLayout>